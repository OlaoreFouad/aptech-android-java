<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".MainActivity">

  <EditText
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:id="@+id/id_edit_text"
	android:hint="@string/enter_post_id"
	app:layout_constraintStart_toStartOf="parent"
	app:layout_constraintEnd_toEndOf="parent"
	android:inputType="number"
	android:layout_marginStart="20dp"
	android:layout_marginEnd="20dp"
	app:layout_constraintTop_toTopOf="parent"
	android:layout_marginTop="10dp"/>

  <Button
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="@string/send_req_text"
	android:id="@+id/send_req_button"
	app:layout_constraintTop_toBottomOf="@id/id_edit_text"
	app:layout_constraintStart_toStartOf="parent"
	app:layout_constraintEnd_toEndOf="parent"
	android:layout_marginTop="10dp"/>

  <TextView
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:id="@+id/text_result"
	app:layout_constraintTop_toBottomOf="@id/send_req_button"
	android:padding="10dp"
	android:textColor="@android:color/black"
	android:textSize="16sp"
	tools:text="hey there!"/>

  <EditText
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:id="@+id/user_id_edit_text"
	android:hint="@string/enter_user_id"
	app:layout_constraintStart_toStartOf="parent"
	app:layout_constraintEnd_toEndOf="parent"
	android:inputType="number"
	android:layout_marginStart="20dp"
	android:layout_marginEnd="20dp"
	app:layout_constraintTop_toBottomOf="@id/text_result"
	android:layout_marginTop="10dp"/>

  <Button
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="@string/send_req_text"
	android:id="@+id/send_req_button_user_id"
	app:layout_constraintTop_toBottomOf="@id/user_id_edit_text"
	app:layout_constraintStart_toStartOf="parent"
	app:layout_constraintEnd_toEndOf="parent"
	android:layout_marginTop="10dp"/>

  <TextView
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:id="@+id/user_id_text_result"
	app:layout_constraintTop_toBottomOf="@id/send_req_button_user_id"
	android:padding="10dp"
	android:textColor="@android:color/black"
	android:textSize="16sp"
	tools:text="hey there!"/>

</androidx.constraintlayout.widget.ConstraintLayout>