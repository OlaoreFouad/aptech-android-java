<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".MainActivity">

  <EditText
	android:id="@+id/filename_edit_text"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginLeft="20dp"
	android:layout_marginTop="10dp"
	android:layout_marginRight="20dp"
	android:hint="@string/filename_text"
	android:paddingBottom="10dp" />

  <EditText
	android:id="@+id/content_edit_text"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginLeft="20dp"
	android:layout_marginTop="20dp"
	android:layout_marginRight="20dp"
	android:hint="@string/content_text"
	android:inputType="textMultiLine"
	android:paddingBottom="10dp" />

  <Button
	android:id="@+id/save_button"
	style="@style/Widget.AppCompat.Button.Colored"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginLeft="20dp"
	android:layout_marginTop="10dp"
	android:layout_marginRight="20dp"
	android:text="@string/save_text" />

  <EditText
	android:id="@+id/get_filename_edit_text"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginLeft="20dp"
	android:layout_marginTop="70dp"
	android:layout_marginRight="20dp"
	android:hint="@string/filename_text"
	android:paddingBottom="10dp" />

  <Button
	android:id="@+id/get_button"
	style="@style/Widget.AppCompat.Button.Colored"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginLeft="20dp"
	android:layout_marginTop="10dp"
	android:layout_marginRight="20dp"
	android:text="@string/get_text" />

  <TextView
	android:id="@+id/get_file_text"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginTop="20dp"
	android:textAlignment="center"
	android:textColor="@android:color/black"
	android:textSize="20sp"
	android:padding="5dp"
	tools:text="This is a very soon!!" />

</LinearLayout>